                    <td>@Html.TextBox("writer")</td>
                </tr>
                <tr>
                    <td> stars:</td>
                    <td>@Html.TextBox("stars")</td>
                </tr>
                <tr>
                    <td>  video Link: </td>
                    <td> @Html.TextBox("videoLink")</td>
                </tr>
                <tr>
                    <td> brief: </td>
                  
                    <td >@Html.TextArea("brief")</td>
                 
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Add Movie " />
                    </td>
                    <td></td>
                </tr>
            </table>
    }
}



       

