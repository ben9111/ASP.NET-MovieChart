@model MovieProject.Models.Actor

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Actor</h2>


@using (Html.BeginForm()) 
{
    <!--anti xss validate the form so there is not manupulation, detecting attack -->
    @Html.AntiForgeryToken()
    
